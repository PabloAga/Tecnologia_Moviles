<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="1"
android:background="@color/background"
tools:context=".MainActivity">


<ImageView
    android:id="@+id/imagenprincipal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@drawable/logo"
    tools:src="@drawable/logo"
    android:layout_gravity="center"
    android:layout_marginTop="50dp"/>



    <EditText
        android:id="@+id/edit_usuario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:hint="@string/Usuario"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="@dimen/Editext" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_contrasena"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/ContraseÃ±a"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/Editext"

        />

    <Button
        android:id="@+id/init_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@color/butoon"
        android:text="@string/Butoon"
        android:textColor="@android:color/white"
        android:textSize="20dp" />
</LinearLayout>